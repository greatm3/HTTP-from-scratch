{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "es2022",
    "target": "es2022",
    "types": ["node"], 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode", "dist"]
}
